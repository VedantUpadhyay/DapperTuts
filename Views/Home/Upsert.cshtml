@model Book

@{
    ViewData["Title"] = "Add a Book";
}

<form method="post" class="w-50" asp-controller="Home" asp-action="Upsert">
    <input type="hidden" value="@Model.Id" />

    <div class="form-group">
        <label asp-for="@Model.BookName" class="col-form-label"></label>
        <input asp-for="@Model.BookName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.AuthorName" class="col-form-label"></label>
        <input asp-for="@Model.AuthorName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.ISBN" class="col-form-label"></label>
        <input asp-for="@Model.ISBN" class="form-control" />
    </div>

    @if (Model.Id != 0)
    {
        <input type="submit" value="Update" class="btn btn-primary" />
    }
    else
    {
        <input type= "submit" value ="Add" class="btn btn-success" />
    }

    <input type="button" asp-controller="Home" asp-action="Index" value="Back To List" class="btn btn-info" />
</form>