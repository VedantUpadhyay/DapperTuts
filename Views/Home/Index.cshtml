@model IEnumerable<Book>

@{
    ViewData["Title"] = "Home Page";
}

<div>
    <h1 class="display-4 text-center">Welcome</h1>

    <div class="row">
        <div class="col-lg-9">
            <h4>Author Name - Book Name - ISBN</h4>
            <ul class="list-group w-50 text-white">
                @foreach (var item in Model)
                {
                    <li class="list-group-item bg-primary">
                        @item.AuthorName - @item.BookName - <a asp-action="DeleteBook" asp-route-Id="@item.Id" class="fas fa-trash-alt trash-icon"></a> -
                        <a asp-controller="Home" asp-action="Upsert" asp-route-id="@item.Id" class="fas fa-edit update-icon"></a>
                    </li>
                }
            </ul>
        </div>

        <div class="col-3 text-left">
            <form asp-controller="Home" asp-action="GetByName" method="post">
                <label for="bookName">Enter Book Name</label>
                <input name="bookName" class="form-group" type="text" id="bookName" />
                <input type="submit" class="btn btn-primary" value="Get Result" />
            </form>
        </div>
    </div>

</div>
